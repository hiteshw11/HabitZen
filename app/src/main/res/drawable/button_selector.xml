<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="#66FFFFFF"> <!-- semi-transparent white ripple -->

    <item>
        <selector>
            <item android:state_pressed="true">
                <shape android:shape="rectangle">
                    <solid android:color="#4B0082" /> <!-- Indigo on press -->
                    <corners android:radius="30dp" />
                </shape>
            </item>

            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#7C4DFF" /> <!-- Default violet -->
                    <corners android:radius="30dp" />
                </shape>
            </item>
        </selector>
    </item>
</ripple>
